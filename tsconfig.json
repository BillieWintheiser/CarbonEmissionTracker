{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["node", "mocha", "chai"]
  },
  "include": [
    "contracts/**/*.sol",
    "test/**/*.ts",
    "tasks/**/*.ts",
    "deploy/**/*.ts",
    "hardhat.config.ts"
  ],
  "exclude": [
    "node_modules",
    "artifacts",
    "cache",
    "coverage",
    "dist",
    "types"
  ],
  "files": ["./hardhat.config.ts"]
}
